<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/12.5/phpunit.xsd"
  bootstrap="tests/bootstrap.php" executionOrder="depends,defects"
  beStrictAboutOutputDuringTests="true" requireCoverageMetadata="true"
  displayDetailsOnAllIssues="true">
  <testsuites>
    <testsuite name="default">
      <directory suffix="Test.php">tests</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory suffix=".php">src</directory>
      <file>features/bootstrap/FeatureContext.php</file>
      <file>adapter-sdk/Constraint/MultidimensionalArrayIsEqual.php</file>
    </include>
  </source>
  <php>
    <ini name="error_reporting" value="E_ALL" />

    <env name="MONGODB_URI" value="mongodb://admin:password@localhost:27017" />

    <env name="SQLITE_DSN" value="sqlite:/tmp/imbo-sqlite-integration-test.sq3" />

    <env name="MYSQL_DSN" value="mysql:host=127.0.0.1;port=3333;dbname=imbo_test" />
    <env name="MYSQL_USERNAME" value="imbo_test" />
    <env name="MYSQL_PASSWORD" value="imbo_test" />

    <env name="POSTGRESQL_DSN" value="pgsql:host=127.0.0.1;port=5555;dbname=imbo_test" />
    <env name="POSTGRESQL_USERNAME" value="imbo_test" />
    <env name="POSTGRESQL_PASSWORD" value="imbo_test" />
  </php>
</phpunit>
