<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/12.5/phpunit.xsd"
  bootstrap="tests/bootstrap.php" executionOrder="depends,defects"
  beStrictAboutOutputDuringTests="true" requireCoverageMetadata="true"
  displayDetailsOnAllIssues="true">
  <testsuites>
    <testsuite name="imbo-unit">
      <directory suffix="Test.php">tests</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory suffix=".php">src</directory>
      <file>features/bootstrap/FeatureContext.php</file>
    </include>
  </source>
  <php>
    <ini name="error_reporting" value="E_ALL" />
    <env name="MONGODB_URI" value="mongodb://localhost:27017" />
    <env name="MONGODB_USERNAME" value="admin" />
    <env name="MONGODB_PASSWORD" value="password" />

    <env name="DB_DSN" value="sqlite:/tmp/imbo-sqlite-integration-test.sq3" />
  </php>
</phpunit>
