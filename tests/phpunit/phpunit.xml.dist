<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="false" bootstrap="bootstrap.php">
  <testsuites>
    <testsuite name="imbo-unit">
      <directory>unit</directory>
    </testsuite>
    <testsuite name="imbo-integration">
      <directory>integration</directory>
    </testsuite>
  </testsuites>

  <php>
    <!-- AWS S3 tests -->
    <var name="AWS_S3_KEY" value="" />
    <var name="AWS_S3_SECRET" value="" />
    <var name="AWS_S3_BUCKET" value="" />
  </php>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">../../src</directory>
      <exclude>
        <directory suffix="Interface.php">../../src/Imbo</directory>
        <file>../../src/Imbo/Exception.php</file>
        <file>../../src/Imbo/Version.php</file>
      </exclude>
    </whitelist>
  </filter>

  <groups>
    <exclude>
      <!-- Exclude the aws group per default -->
      <group>aws</group>
    </exclude>
  </groups>
</phpunit>
